  "systemd": {
    "units": [
      {
        "contents": "[Unit]\nAfter=network-online.target\n\n[Service]\nType=forking\nRestart=no\nExecStart=podman pod create --name assisted-installer -p 5432,8000,8090,8080\n\n[Install]\nWantedBy=multi-user.target\n",
